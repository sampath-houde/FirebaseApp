<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_margin="@dimen/_12sdp"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="@dimen/_8sdp"
        app:cardElevation="@dimen/_2sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:padding="@dimen/_12sdp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/profile_pic"
                android:layout_width="@dimen/_50sdp"
                android:src="@drawable/dummy_man"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_height="@dimen/_50sdp"/>

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/profile_pic"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="@dimen/_16sdp"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="@dimen/_14sdp"
                android:textColor="@color/colorPrimary"
                android:text="Sampath Houde"/>

            <TextView
                android:id="@+id/user_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/profile_pic"
                android:layout_marginStart="@dimen/_16sdp"
                android:text="Age: 12 Years"
                android:layout_marginTop="@dimen/_2sdp"
                android:textColor="@color/dark_grey2"
                android:fontFamily="@font/poppins"
                app:layout_constraintTop_toBottomOf="@id/user_name"/>

            <TextView
                android:id="@+id/user_birthday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/profile_pic"
                android:layout_marginStart="@dimen/_16sdp"
                android:text="Birthday: September 12, 2001"
                android:layout_marginTop="@dimen/_2sdp"
                android:textColor="@color/dark_grey2"
                android:fontFamily="@font/poppins"
                app:layout_constraintTop_toBottomOf="@id/user_age"/>

        </androidx.constraintlayout.widget.ConstraintLayout>




    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>